<!DOCTYPE html>
<html>
    <head>
        <title>Products</title>
        <meta charset="utf-8">
    </head>
    <body>
        <form action="/addToCart" method="post">
            <div id="container">
                <div>
                    <ol>
                        <% for (const i of products) { %>
                            <li><a href="/product?id=<%=i.id%>"><%= i.name %></a></li>
                        <% } %>
                    </ol>
                </div>
            </div>
        </form>
    </body>
</html>